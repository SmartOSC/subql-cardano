  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Attach NestJS WS",
      "stopOnEntry": false,
      "request": "launch",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "start:dev", "--", "--inspect-brk"],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "auto",
      "port": 9229,
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/packages/node"
    }
  ]
}
